{
  "manifest_version": 3,
  "name": "Joke Mode",
  "version": "2",
  "description": "Humorous and somewhat informative comments",
  
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*","http://*/*"
      ]
    }
  ],
  
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  
  "permissions": [
    "storage"
  ],
  
  "options_ui": {
    "page": "key.html",
    "open_in_tab": false
  },
  
  "web_accessible_resources": [
    {
      "resources": ["key.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
